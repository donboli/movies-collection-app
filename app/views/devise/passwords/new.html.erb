<div class="ui grid center aligned middle aligned full-height">
  <div class="column form-segment">
    <div class="ui teal segment raised">
      <h2><%= t('.forgot_your_password') %></h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'ui form'}) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <div class="ui left icon input">
            <%= semantic_icon('user') %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t('.email') %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit t('.submit'), class: 'ui button primary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>