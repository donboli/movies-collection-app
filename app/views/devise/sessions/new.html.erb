<div class="ui grid center aligned middle aligned full-height">
  <div class="column form-segment">
    <div class="ui teal segment raised">
      <h2>Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'ui form'}) do |f| %>
        <div class="field">
          <div class="ui left icon input">
            <%= semantic_icon('user') %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'E-Mail' %>
          </div>
        </div>

        <div class="field">
          <div class="ui left icon input">
            <%= semantic_icon('lock') %>
            <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <div class="ui toggle checkbox">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", class: 'ui button primary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>