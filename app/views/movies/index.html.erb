<h1 class="ui header">Movies</h1>

<table class="ui celled table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Synopsis</th>
      <th>Rating</th>
      <th>Actors</th>
      <th>Director</th>
      <th># of Pictures</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.name %></td>
        <td><%= movie.synopsis %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.actors %></td>
        <td><%= movie.director %></td>
        <td><%= movie.pictures.size %></td>
        <td>
          <%= button_to movie, method: :get, class: 'ui circular icon button' do %>
            <%= semantic_icon('eye') %>
          <% end %>
        </td>
        <td>
          <%= button_to edit_movie_path(movie), method: :get, class: 'ui circular icon button' do %>
            <%= semantic_icon('edit') %>
          <% end %>
        </td>
        <td>
          <%= button_to movie, method: :delete, data: { confirm: 'Are you sure?' }, class: 'ui circular icon button' do %>
            <%= semantic_icon('trash alternate') %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Movie', new_movie_path, {class: 'ui button'} %>
