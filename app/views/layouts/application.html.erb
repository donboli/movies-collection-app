<!DOCTYPE html>
<html>
  <head>
    <title>MovieCollectionApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="ui container full-height wrapper">
      <%= link_to('Sign Out', destroy_user_session_path, method: :delete, class: 'ui button negative') if user_signed_in? %>
      <%= semantic_flash %>

      <%= yield %>
    </div>
  </body>
</html>
